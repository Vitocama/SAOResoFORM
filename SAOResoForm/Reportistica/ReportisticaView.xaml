<Window x:Class="SAOResoForm.Reportistica.ReportisticaView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:SAOResoForm.Reportistica"
        xmlns:converters="clr-namespace:SAOResoForm.Converter"
        mc:Ignorable="d"
        Title="Reportistica Database Attestati"
        Height="700"
        Width="1600"
        WindowStartupLocation="CenterScreen">

    <!-- ========================= -->
    <!-- RISORSE DELLA FINESTRA -->
    <!-- ========================= -->
    <Window.Resources>
        <converters:DataScadenzaToColorConverter x:Key="DataScadenzaToColorConverter"/>
        <converters:DataScadenzaToForegroundConverter x:Key="DataScadenzaToForegroundConverter"/>
    </Window.Resources>

    <!-- ========================= -->
    <!-- LAYOUT PRINCIPALE -->
    <!-- ========================= -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ========================= -->
        <!-- TITOLO -->
        <!-- ========================= -->
        <TextBlock Grid.Row="0"
                   Text="REPORTISTICA DATABASE ATTESTATI"
                   Style="{StaticResource HeadText}"
                   HorizontalAlignment="Center"
                   Margin="0,10"/>

        <!-- ========================= -->
        <!-- BARRA DI RICERCA -->
        <!-- ========================= -->
        <!-- ========================= -->
        <!-- BARRA DI RICERCA -->
        <!-- ========================= -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ETICHETTA CERCA -->
            <TextBlock Grid.Column="0" Grid.Row="0"
               Text="Cerca:"
               VerticalAlignment="Center"
               FontSize="14"
               Margin="0,0,10,0"/>

            <!-- TEXTBOX RICERCA -->
            <TextBox Grid.Column="1" Grid.Row="0"
             Width="300"
             MaxWidth="600"
             Height="30"
             VerticalContentAlignment="Center"
             FontSize="14"
             HorizontalAlignment="Left"
             Text="{Binding FiltroRicerca, UpdateSourceTrigger=PropertyChanged}"/>

            <!-- CONTATORE RISULTATI -->
            <StackPanel Grid.Column="2" Grid.Row="0"
                Orientation="Horizontal"
                VerticalAlignment="Center"
                Margin="10,0,0,0">

                <TextBlock Text="Visualizzati: "
                   FontSize="14"
                   FontWeight="Bold"
                   Foreground="#2C3E50"
                   VerticalAlignment="Center"/>

                <TextBlock Text="{Binding FilteredBDAttestati.Count}"
                   FontSize="14"
                   FontWeight="Bold"
                   Foreground="#27ae60"
                   VerticalAlignment="Center"/>

                <TextBlock Text=" / "
                   FontSize="14"
                   FontWeight="Normal"
                   Foreground="#7f8c8d"
                   Margin="5,0"
                   VerticalAlignment="Center"/>

                <TextBlock Text="{Binding BDAttestati.Count}"
                   FontSize="14"
                   FontWeight="Normal"
                   Foreground="#7f8c8d"
                   VerticalAlignment="Center"/>
            </StackPanel>

            <!-- ✅ PULSANTI FILTRO ATTIVO -->
            <StackPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3"
                Orientation="Horizontal"
                HorizontalAlignment="Left"
                Margin="0,10,0,0">

                <TextBlock Text="Filtro Stato:"
                   FontSize="14"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   Margin="0,0,10,0"/>

                <Button Content="TUTTI"
                Command="{Binding MostraTuttiCommand}"
                Width="100"
                Height="30"
                FontSize="12"
                FontWeight="Bold"
                Margin="5,0"/>

                <Button Content="SOLO ATTIVI"
                Command="{Binding MostraAttiviCommand}"
                Width="120"
                Height="30"
                FontSize="12"
                FontWeight="Bold"
                Margin="5,0"/>

                <Button Content="SOLO NON ATTIVI"
                Command="{Binding MostraNonAttiviCommand}"
                Width="140"
                Height="30"
                FontSize="12"
                FontWeight="Bold"
                Margin="5,0"/>
            </StackPanel>
        </Grid>

        <!-- ========================= -->
        <!-- DATAGRID CON COLORI -->
        <!-- ========================= -->
        <DataGrid Grid.Row="2"
                  Margin="10"
                  ItemsSource="{Binding FilteredBDAttestati}"
                  SelectedItem="{Binding AttestatoSelezionato}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserSortColumns="True"
                  GridLinesVisibility="Horizontal"
                  HorizontalGridLinesBrush="#6C9DC9">

            <!-- ========================= -->
            <!-- STILE RIGHE CON COLORI -->
            <!-- ========================= -->
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <!-- Colore di sfondo in base alla data di scadenza -->
                    <Setter Property="Background" 
                            Value="{Binding DataScadenzaCorso, Converter={StaticResource DataScadenzaToColorConverter}}"/>

                    <!-- Altezza minima riga -->
                    <Setter Property="MinHeight" Value="28"/>

                    <!-- Trigger per selezione -->
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#BDE3FF"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.Columns>
                <!-- ID -->
                <DataGridTextColumn Header="ID" 
                                    Width="50"
                                    Binding="{Binding Id}"/>

                <!-- CHECKBOX ATTIVITÀ -->
                <DataGridCheckBoxColumn Header="Attivo" 
                        Width="80"
                        Binding="{Binding Attivo, UpdateSourceTrigger=PropertyChanged}"
                        IsReadOnly="False">
                    <DataGridCheckBoxColumn.ElementStyle>
                        <Style TargetType="CheckBox">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridCheckBoxColumn.ElementStyle>
                </DataGridCheckBoxColumn>
                <!-- MATRICOLA DIPENDENTE -->
                <DataGridTextColumn Header="Matricola" 
                                    Width="100"
                                    Binding="{Binding MatricolaDipendente}"/>

                <!-- TITOLO CORSO -->
                <DataGridTextColumn Header="Titolo Corso" 
                                    Width="200"
                                    Binding="{Binding TitoloCorso}"/>

                <!-- CODICE ATTIVITÀ FORMATIVA -->
                <DataGridTextColumn Header="Cod. Attività Formativa" 
                                    Width="150"
                                    Binding="{Binding CodiceAttivitaFormativa}"/>

                <!-- CODICE MATERIA CORSO -->
                <DataGridTextColumn Header="Cod. Materia Corso" 
                                    Width="140"
                                    Binding="{Binding CodiceMateriaCorso}"/>

                <!-- ENTE FORMATORE -->
                <DataGridTextColumn Header="Ente Formatore" 
                                    Width="180"
                                    Binding="{Binding EnteFormatore}"/>

                <!-- ENTE CERTIFICATORE -->
                <DataGridTextColumn Header="Ente Certificatore" 
                                    Width="180"
                                    Binding="{Binding DenominazioneEnteCertificatore}"/>

                <!-- DATA INIZIO CORSO -->
                <DataGridTextColumn Header="Data Inizio" 
                                    Width="100"
                                    Binding="{Binding DataInizioCorso}"/>

                <!-- DATA FINE CORSO -->
                <DataGridTextColumn Header="Data Fine" 
                                    Width="100"
                                    Binding="{Binding DataFineCorso}"/>

                <!-- ANNO CORSO -->
                <DataGridTextColumn Header="Anno" 
                                    Width="70"
                                    Binding="{Binding AnnoCorso}"/>

                <!-- VALIDITÀ ANNI -->
                <DataGridTextColumn Header="Validità (anni)" 
                                    Width="100"
                                    Binding="{Binding ValiditaAnni}"/>

                <!-- DATA SCADENZA CON COLORE TESTO -->
                <DataGridTextColumn Header="Data Scadenza" 
                                    Width="110"
                                    Binding="{Binding DataScadenzaCorso}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" 
                                    Value="{Binding DataScadenzaCorso, Converter={StaticResource DataScadenzaToForegroundConverter}}"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

            </DataGrid.Columns>
        </DataGrid>

        <!-- ========================= -->
        <!-- PULSANTI AZIONI -->
        <!-- ========================= -->
        <!-- ========================= -->
        <!-- PULSANTI AZIONI -->
        <!-- ========================= -->
        <StackPanel Grid.Row="3" 
            Orientation="Horizontal" 
            HorizontalAlignment="Center" 
            Margin="10">

            <Button Content="SALVA MODIFICHE"
            Command="{Binding SalvaCommand}"
            Width="180"
            Height="40"
            FontSize="14"
            FontWeight="Bold"
            Margin="5"/>

            <Button Content="AGGIORNA"
            Command="{Binding AggiornaCommand}"
            Width="150"
            Height="40"
            FontSize="14"
            FontWeight="Bold"
            Margin="5"/>

            <Button Content="RESET FILTRO"
            Command="{Binding ResetFiltroCommand}"
            Width="150"
            Height="40"
            FontSize="14"
            FontWeight="Bold"
            Margin="5"/>

            <Button Content="ESPORTA"
            Command="{Binding EsportaCommand}"
            Width="150"
            Height="40"
            FontSize="14"
            FontWeight="Bold"
            Margin="5"/>
        </StackPanel>

    </Grid>
</Window>