<Window x:Class="SAOResoForm.DBScelta.SceltaDBView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SAOResoForm.DBScelta"
        mc:Ignorable="d"
        Title="Configurazione" Height="400" Width="550"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="20" Style="{ StaticResource TotaleSfondo }">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- DATABASE -->
        <TextBlock Grid.Row="0" Text="Percorso Database:" FontWeight="Bold" Margin="0,0,0,5"/>
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0"
                     Text="{Binding PercorsoDb, UpdateSourceTrigger=PropertyChanged}"
                     IsReadOnly="True" Padding="5" Margin="0,0,5,0"
                     VerticalContentAlignment="Center"/>
            <Button Grid.Column="1" Content="Sfoglia..."
                    Style="{StaticResource NavyButtonStyle}"
                    Command="{Binding SfogliaCommand}"
                    Width="80" Padding="5"/>
        </Grid>

        <!-- CARTELLA ATTESTATI -->
        <TextBlock Grid.Row="2" Text="Cartella Attestati:" FontWeight="Bold" Margin="0,0,0,5"/>
        <Grid Grid.Row="3" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0"
                     Text="{Binding CartellaAttestati, UpdateSourceTrigger=PropertyChanged}"
                     IsReadOnly="True" Padding="5" Margin="0,0,5,0"
                     VerticalContentAlignment="Center"/>
            <Button Grid.Column="1" Content="Sfoglia..."
                    Command="{Binding SfogliaAttestatiCommand}"
                    Width="80" Padding="5"
                      Style="{StaticResource NavyButtonStyle}"
                    />
        </Grid>

        <!-- SALVA -->
        <Button Grid.Row="4" Content="Salva"
                Command="{Binding SalvaCommand}"
                  Style="{StaticResource NavyButtonStyle}"
                Width="100" HorizontalAlignment="Right" Padding="5"/>
    </Grid>
</Window>