<Window x:Class="SAOResoForm.LoginControl.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SAOResoForm.Converter"
        Title="Accesso"
        Height="340" Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <local:InverseBoolConverter   x:Key="InverseBoolConverter"/>

        <Style TargetType="TextBox">
            <Setter Property="BorderThickness"          Value="0"/>
            <Setter Property="Background"               Value="Transparent"/>
            <Setter Property="Padding"                  Value="4,8"/>
            <Setter Property="FontSize"                 Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FocusVisualStyle"         Value="{x:Null}"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="BorderThickness"          Value="0"/>
            <Setter Property="Background"               Value="Transparent"/>
            <Setter Property="Padding"                  Value="4,8"/>
            <Setter Property="FontSize"                 Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FocusVisualStyle"         Value="{x:Null}"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Foreground"       Value="White"/>
            <Setter Property="FontSize"         Value="13"/>
            <Setter Property="FontWeight"       Value="Bold"/>
            <Setter Property="Padding"          Value="0,11"/>
            <Setter Property="BorderThickness"  Value="0"/>
            <Setter Property="Cursor"           Value="Hand"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="#1E3A5F"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#2A5298"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#152C47"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Background" Value="#AAAAAA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="12" Background="White"
            BorderBrush="#E0E0E0" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="24" ShadowDepth="4" Opacity="0.18"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    CornerRadius="12,12,0,0"
                    Background="#1E3A5F"
                    Padding="24,22">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="&#xE72E;"
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="30" Foreground="White"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Accedi al Sistema"
                               FontSize="16" FontWeight="SemiBold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

            <StackPanel Grid.Row="1" Margin="32,26,32,26" VerticalAlignment="Center">

                <TextBlock Text="Utente" FontSize="11" FontWeight="SemiBold"
                           Foreground="#555555" Margin="0,0,0,5"/>
                <Border BorderBrush="#CCCCCC" BorderThickness="1"
                        CornerRadius="6" Margin="0,0,0,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="36"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Text="&#xE77B;" FontFamily="Segoe MDL2 Assets"
                                   FontSize="14" Foreground="#AAAAAA"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1"
                                 Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                </Border>

                <TextBlock Text="Password" FontSize="11" FontWeight="SemiBold"
                           Foreground="#555555" Margin="0,0,0,5"/>
                <Border BorderBrush="#CCCCCC" BorderThickness="1"
                        CornerRadius="6" Margin="0,0,0,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="36"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Text="&#xE72E;" FontFamily="Segoe MDL2 Assets"
                                   FontSize="14" Foreground="#AAAAAA"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        <PasswordBox Grid.Column="1"
                                     x:Name="PwdPassword"
                                     PasswordChanged="PwdPassword_PasswordChanged"/>
                    </Grid>
                </Border>

                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="#C0392B" FontSize="11"
                           Margin="0,0,0,14"
                           Visibility="{Binding HasError,
                               Converter={StaticResource BoolToVisConverter}}"/>

                <ProgressBar IsIndeterminate="True" Height="3"
                             Margin="0,0,0,12"
                             Foreground="#1E3A5F" Background="Transparent"
                             BorderThickness="0"
                             Visibility="{Binding IsBusy,
                                 Converter={StaticResource BoolToVisConverter}}"/>

                <Button Content="ACCEDI"
                        Command="{Binding LoginCommand}"
                        IsEnabled="{Binding IsBusy,
                            Converter={StaticResource InverseBoolConverter},
                            FallbackValue=True}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>