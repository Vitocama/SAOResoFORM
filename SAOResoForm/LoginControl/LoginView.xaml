<Window x:Class="SAOResoForm.LoginControl.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SAOResoForm.Converter"
        Title="Accesso"
        Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        SizeToContent="Height">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <local:InverseBoolConverter                x:Key="InverseBoolConverter"/>
        <local:InverseBoolToVisibilityConverter    x:Key="InverseBoolToVisConverter"/>

        <Style TargetType="TextBox">
            <Setter Property="BorderThickness"          Value="0"/>
            <Setter Property="Background"               Value="Transparent"/>
            <Setter Property="Padding"                  Value="4,8"/>
            <Setter Property="FontSize"                 Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FocusVisualStyle"         Value="{x:Null}"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="BorderThickness"          Value="0"/>
            <Setter Property="Background"               Value="Transparent"/>
            <Setter Property="Padding"                  Value="4,8"/>
            <Setter Property="FontSize"                 Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FocusVisualStyle"         Value="{x:Null}"/>
        </Style>

        <!-- Stile base pulsanti -->
        <Style TargetType="Button">
            <Setter Property="Foreground"       Value="White"/>
            <Setter Property="FontSize"         Value="13"/>
            <Setter Property="FontWeight"       Value="Bold"/>
            <Setter Property="Padding"          Value="0,11"/>
            <Setter Property="BorderThickness"  Value="0"/>
            <Setter Property="Cursor"           Value="Hand"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#2A5298"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#152C47"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Background" Value="#AAAAAA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Stile pulsante icona (occhio / chiudi) -->
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background"       Value="Transparent"/>
            <Setter Property="BorderThickness"  Value="0"/>
            <Setter Property="Cursor"           Value="Hand"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="Transparent" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#22FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#44FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Stile link testo -->
        <Style x:Key="LinkButtonStyle" TargetType="Button">
            <Setter Property="Background"       Value="Transparent"/>
            <Setter Property="BorderThickness"  Value="0"/>
            <Setter Property="Cursor"           Value="Hand"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <TextBlock x:Name="Tb"
                                   Text="{TemplateBinding Content}"
                                   TextDecorations="Underline"
                                   Foreground="#1E3A5F"
                                   FontSize="11"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Tb" Property="Foreground" Value="#2A5298"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Stile pulsante verde (salva password) -->
        <Style x:Key="GreenButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#388E3C"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#1B5E20"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Background" Value="#AAAAAA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Border CornerRadius="12" Background="White"
            BorderBrush="#E0E0E0" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="24" ShadowDepth="4" Opacity="0.18"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- HEADER BLU -->
            <Border Grid.Row="0"
                    CornerRadius="12,12,0,0"
                    Background="#1E3A5F"
                    Padding="24,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                        <TextBlock Text="&#xE72E;"
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="30" Foreground="White"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Accedi al Sistema"
                                   FontSize="16" FontWeight="SemiBold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   Margin="0,8,0,0"/>
                    </StackPanel>

                    <Button Grid.Column="1"
                            Content="✖"
                            Command="{Binding ChiudiCommand}"
                            Style="{StaticResource IconButtonStyle}"
                            Foreground="White"
                            FontSize="16"
                            FontWeight="Bold"
                            Width="30"
                            Height="30"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Right"/>
                </Grid>
            </Border>

            <!-- FORM -->
            <StackPanel Grid.Row="1" Margin="32,26,32,26" VerticalAlignment="Top">

                <!-- USERNAME -->
                <TextBlock Text="Utente" FontSize="11" FontWeight="SemiBold"
                           Foreground="#555555" Margin="0,0,0,5"/>
                <Border BorderBrush="#CCCCCC" BorderThickness="1"
                        CornerRadius="6" Margin="0,0,0,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="36"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Text="&#xE77B;" FontFamily="Segoe MDL2 Assets"
                                   FontSize="14" Foreground="#AAAAAA"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1"
                                 Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                </Border>

                <!-- PASSWORD ATTUALE -->
                <TextBlock Text="Password" FontSize="11" FontWeight="SemiBold"
                           Foreground="#555555" Margin="0,0,0,5"/>
                <Border BorderBrush="#CCCCCC" BorderThickness="1"
                        CornerRadius="6" Margin="0,0,0,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="36"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="36"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="&#xE72E;" FontFamily="Segoe MDL2 Assets"
                                   FontSize="14" Foreground="#AAAAAA"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>

                        <PasswordBox Grid.Column="1"
                                     x:Name="PwdPassword"
                                     PasswordChanged="PwdPassword_PasswordChanged"
                                     Visibility="{Binding MostraPassword,
                                         Converter={StaticResource InverseBoolToVisConverter}}"/>

                        <TextBox Grid.Column="1"
                                 Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                                 Visibility="{Binding MostraPassword,
                                     Converter={StaticResource BoolToVisConverter}}"/>

                        <Button Grid.Column="2"
                                Content="{Binding IconaOcchio}"
                                Command="{Binding TogglePasswordCommand}"
                                Style="{StaticResource IconButtonStyle}"
                                FontSize="14"
                                Width="36"
                                Height="36"/>
                    </Grid>
                </Border>

                <!-- ERRORE -->
                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="#C0392B" FontSize="11"
                           Margin="0,0,0,14"
                           Visibility="{Binding HasError,
                               Converter={StaticResource BoolToVisConverter}}"/>

                <!-- PROGRESS -->
                <ProgressBar IsIndeterminate="True" Height="3"
                             Margin="0,0,0,12"
                             Foreground="#1E3A5F" Background="Transparent"
                             BorderThickness="0"
                             Visibility="{Binding IsBusy,
                                 Converter={StaticResource BoolToVisConverter}}"/>

                <!-- ACCEDI -->
                <Button Content="ACCEDI"
                        Background="#1E3A5F"
                        Command="{Binding LoginCommand}"
                        IsEnabled="{Binding IsBusy,
                            Converter={StaticResource InverseBoolConverter},
                            FallbackValue=True}"/>

                <!-- LINK CAMBIA PASSWORD -->
                <Button Content="Cambia password"
                        Command="{Binding ToggleCambiaPasswordCommand}"
                        Style="{StaticResource LinkButtonStyle}"
                        HorizontalAlignment="Center"
                        Margin="0,10,0,0"/>

                <!-- SEZIONE CAMBIA PASSWORD -->
                <StackPanel Visibility="{Binding MostraCambiaPassword,
                                Converter={StaticResource BoolToVisConverter}}"
                            Margin="0,14,0,0">

                    <Separator Margin="0,0,0,14" Background="#E0E0E0"/>

                    <TextBlock Text="Nuova Password" FontSize="11" FontWeight="SemiBold"
                               Foreground="#555555" Margin="0,0,0,5"/>
                    <Border BorderBrush="#CCCCCC" BorderThickness="1"
                            CornerRadius="6" Margin="0,0,0,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="36"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="&#xE72E;" FontFamily="Segoe MDL2 Assets"
                                       FontSize="14" Foreground="#AAAAAA"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                            <PasswordBox Grid.Column="1"
                                         x:Name="PwdNuova"
                                         PasswordChanged="PwdNuova_PasswordChanged"/>
                        </Grid>
                    </Border>

                    <TextBlock Text="Conferma Password" FontSize="11" FontWeight="SemiBold"
                               Foreground="#555555" Margin="0,0,0,5"/>
                    <Border BorderBrush="#CCCCCC" BorderThickness="1"
                            CornerRadius="6" Margin="0,0,0,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="36"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="&#xE72E;" FontFamily="Segoe MDL2 Assets"
                                       FontSize="14" Foreground="#AAAAAA"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                            <PasswordBox Grid.Column="1"
                                         x:Name="PwdConferma"
                                         PasswordChanged="PwdConferma_PasswordChanged"/>
                        </Grid>
                    </Border>

                    <Button Content="SALVA NUOVA PASSWORD"
                            Background="#2E7D32"
                            Style="{StaticResource GreenButtonStyle}"
                            Command="{Binding CambiaPasswordCommand}"/>
                </StackPanel>

            </StackPanel>
        </Grid>
    </Border>
</Window>