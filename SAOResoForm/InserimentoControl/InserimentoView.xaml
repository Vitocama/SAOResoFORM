<UserControl x:Class="SAOResoForm.InserimentoControl.InserimentoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="1050" Height="650" Cursor="">

    <Grid Margin="20" Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="190"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="500"/>
        </Grid.ColumnDefinitions>

        <!-- Titolo -->
        <StackPanel HorizontalAlignment="Center" 
                    VerticalAlignment="Top" 
                    Grid.ColumnSpan="3">
            <TextBlock Style="{StaticResource HeadText}" 
                       Text="INSERIMENTO DATI PERSONALE"/>
        </StackPanel>

        <!-- ========== PRIMA COLONNA: REPARTO + DATI ANAGRAFICI ========== -->
        <StackPanel Grid.Column="0" 
                    Orientation="Vertical" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Top"  
                    Margin="0,40,0,20">

            <!-- REPARTO -->
            <TextBlock Text="REPARTO" 
                       Style="{StaticResource WhiteBoldText}" 
                       Margin="0,0,0,5" 
                       HorizontalAlignment="Center"/>
            <ListBox ItemsSource="{Binding Reparti}"
                     SelectedItem="{Binding RepartoSelezionato}"
                     Style="{DynamicResource ListBox1}"
                     Width="180"
                     Height="250"
                     Margin="0,0,0,20"/>

            <!-- NOME -->
            <TextBlock Text="NOME:"
                       Style="{StaticResource WhiteBoldText}"
                       Margin="0,0,0,5"/>
            <TextBox Text="{Binding Nome, UpdateSourceTrigger=PropertyChanged}"
                     Width="180"
                     Height="30"
                     FontSize="14"
                     Padding="5"
                     Margin="0,0,0,10"/>

            <!-- COGNOME -->
            <TextBlock Text="COGNOME:"
                       Style="{StaticResource WhiteBoldText}"
                       Margin="0,0,0,5"/>
            <TextBox Text="{Binding Cognome, UpdateSourceTrigger=PropertyChanged}"
                     Width="180"
                     Height="30"
                     FontSize="14"
                     Padding="5"
                     Margin="0,0,0,10"/>

            <!-- MATRICOLA -->
            <TextBlock Text="MATRICOLA:"
                       Style="{StaticResource WhiteBoldText}"
                       Margin="0,0,0,5"/>
            <TextBox Text="{Binding Matricola, UpdateSourceTrigger=PropertyChanged}"
                     Width="180"
                     Height="30"
                     FontSize="14"
                     Padding="5"/>

        </StackPanel>

        <!-- ========== SECONDA COLONNA: SEZIONE + DATI PROFESSIONALI ========== -->
        <StackPanel Grid.Column="1" 
                    Orientation="Vertical" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Top" 
                    Margin="0,40,0,20">

            <!-- SEZIONE -->
            <TextBlock Text="SEZIONE" 
                       Style="{StaticResource WhiteBoldText}" 
                       Margin="0,0,0,5"
                       HorizontalAlignment="Center"/>
            <ListBox ItemsSource="{Binding Sezioni}"
                     SelectedItem="{Binding SezioneSelezionata}"
                     Style="{DynamicResource ListBox2}"
                     Width="280"
                     Height="250"
                     Margin="0,0,0,20"/>

            <!-- INCARICO -->
            <TextBlock Text="INCARICO:"
                       Style="{StaticResource WhiteBoldText}"
                       Margin="0,0,0,5"/>
            <ComboBox ItemsSource="{Binding Incarichi}"
                      SelectedItem="{Binding IncaricoSelezionato}"
                      Width="280"
                      Height="30"
                      FontSize="14"
                      Margin="0,0,0,10"/>

            <!-- STATO DI SERVIZIO -->
            <TextBlock Text="STATO DI SERVIZIO:"
                       Style="{StaticResource WhiteBoldText}"
                       Margin="0,0,0,5"/>
            <ComboBox ItemsSource="{Binding Servizio}"
                      SelectedItem="{Binding ServizioSelezionato}"
                      Width="280"
                      Height="30"
                      FontSize="14"
                      Margin="0,0,0,10"/>

            <!-- ANNOTAZIONI -->
            <TextBlock Text="ANNOTAZIONI:"
                       Style="{StaticResource WhiteBoldText}"
                       Margin="0,0,0,5"/>
            <TextBox Text="{Binding Annotazioni, UpdateSourceTrigger=PropertyChanged}"
                     Width="280"
                     Height="30"
                     FontSize="14"
                     Padding="5"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"/>

        </StackPanel>

        <!-- ========== TERZA COLONNA: NUCLEO + CLASSIFICAZIONE ========== -->
        <StackPanel Grid.Column="2" 
                    Orientation="Vertical" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Top" 
                    Margin="0,40,0,20">

            <!-- NUCLEO -->
            <TextBlock Text="NUCLEO" 
                       Style="{StaticResource WhiteBoldText}" 
                       Margin="0,0,0,5" 
                       HorizontalAlignment="Center"/>
            <ListBox ItemsSource="{Binding Nuclei}"
                     SelectedItem="{Binding NucleoSelezionato}"
                     Style="{DynamicResource ListBox2}"
                     Width="480"
                     Height="250"
                     Margin="0,0,0,20"/>

            <!-- MIL/CIV -->
            <TextBlock Text="MIL/CIV:"
                       Style="{StaticResource WhiteBoldText}"
                       Margin="0,0,0,5"/>
            <ComboBox ItemsSource="{Binding Militari}"
                      SelectedItem="{Binding MilitariSelezionato}"
                      Width="480"
                      Height="30"
                      FontSize="14"
                      Margin="0,0,0,10"/>

            <!-- RUOLO/CATEGORIA -->
            <TextBlock Text="RUOLO/CATEGORIA:"
                       Style="{StaticResource WhiteBoldText}"
                       Margin="0,0,0,5"/>
            <TextBox Text="{Binding CategoriaProfilo, UpdateSourceTrigger=PropertyChanged}"
                     Width="480"
                     Height="30"
                     FontSize="14"
                     Padding="5"
                     Margin="0,0,0,10"/>

            <!-- PROFILO -->
            <TextBlock Text="PROFILO:"
                       Style="{StaticResource WhiteBoldText}"
                       Margin="0,0,0,5"/>
            <TextBox Text="{Binding GradoQualifica, UpdateSourceTrigger=PropertyChanged}"
                     Width="480"
                     Height="30"
                     FontSize="14"
                     Padding="5"/>

        </StackPanel>

        <!-- PULSANTE SALVA -->
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Bottom" 
                    Grid.ColumnSpan="3" 
                    Margin="0,0,0,20">
            <Button Content="SALVA" 
                    Command="{Binding SalvaCommand}" Height="50"/>
        </StackPanel>
    </Grid>
</UserControl>