<UserControl x:Class="SAOResoForm.PersonaleControl.PersonaleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <!-- ✅ PULSANTI A SINISTRA IN VERTICALE -->
        <StackPanel Grid.Column="1"
                    Grid.Row="1"
                    Orientation="Vertical"
                    VerticalAlignment="Center"
                    Margin="0">

            <!-- PRIMO PULSANTE - INSERIMENTO -->
            <Button Content="INSERIMENTO" 
                    Command="{Binding OpenInserimentoCommand}"
                    Width="180"
                    Height="50"
                    FontSize="16"
                    FontWeight="Bold"
                    Background="#3498DB"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="0,0,0,10"/>

            <!-- SECONDO PULSANTE - VISUALIZZA -->
            <Button Content="VISUALIZZA" 
                    Command="{Binding OpenVisualizzaCommand}"
                    Width="180"
                    Height="50"
                    FontSize="16"
                    FontWeight="Bold"
                    Background="#2ECC71"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="0,0,0,10"/>
        </StackPanel>

        <!-- ✅ AREA CONTENUTO A DESTRA (se necessaria) -->
        <ContentControl Grid.Column="2"
                        Grid.Row="1"
                        Content="{Binding CurrentView}"
                        Margin="20,0,0,0"/>
    </Grid>
</UserControl>
