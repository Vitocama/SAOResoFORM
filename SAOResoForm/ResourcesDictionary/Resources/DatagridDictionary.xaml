<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Stile per DataGrid con colori alternati -->
    <Style TargetType="DataGrid">
        <!-- Impostazioni generali -->
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="AutoGenerateColumns" Value="False"/>
        <Setter Property="CanUserAddRows" Value="False"/>
        <Setter Property="CanUserDeleteRows" Value="False"/>
       
        <Setter Property="SelectionMode" Value="Single"/>
        <Setter Property="SelectionUnit" Value="FullRow"/>
        <Setter Property="GridLinesVisibility" Value="All"/>
        <Setter Property="HeadersVisibility" Value="Column"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#D3D3D3"/>
        <!-- Grigio chiaro -->
        <Setter Property="Background" Value="White"/>
        <Setter Property="RowBackground" Value="LightBlue"/>
        <Setter Property="AlternatingRowBackground" Value="LightPink"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>

        <!-- Colore delle linee della griglia -->
        <Setter Property="HorizontalGridLinesBrush" Value="#D3D3D3"/>
        <!-- Grigio chiaro -->
        <Setter Property="VerticalGridLinesBrush" Value="#D3D3D3"/>
        <!-- Grigio chiaro -->

        <!-- Stile per le righe -->
        <Setter Property="RowStyle">
            <Setter.Value>
                <Style TargetType="DataGridRow">
                    <Setter Property="Height" Value="35"/>
                    <Setter Property="Background" Value="LightBlue"/>
                    <Setter Property="BorderBrush" Value="#D3D3D3"/>
                    <!-- Grigio chiaro -->
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>

                    <!-- Trigger per righe alternate -->
                    <Style.Triggers>
                        <Trigger Property="AlternationIndex" Value="1">
                            <Setter Property="Background" Value="LightPink"/>
                        </Trigger>

                        <!-- Trigger per selezione -->
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="Yellow"/>
                            <Setter Property="Foreground" Value="Black"/>
                        </Trigger>

                        <!-- Hover effect -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="LightYellow"/>
                        </Trigger>

                        <!-- Multi-trigger per selezione + hover -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsSelected" Value="True"/>
                                <Condition Property="IsMouseOver" Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter Property="Background" Value="Gold"/>
                        </MultiTrigger>
                    </Style.Triggers>
                </Style>
            </Setter.Value>
        </Setter>

        <!-- Stile per le celle -->
        <Setter Property="CellStyle">
            <Setter.Value>
                <Style TargetType="DataGridCell">
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="BorderBrush" Value="#D3D3D3"/>
                    <!-- Grigio chiaro -->
                    <Setter Property="Padding" Value="10,5"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>

                    <Style.Triggers>
                        <!-- Rimuovi il bordo di focus predefinito -->
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="BorderBrush" Value="#D3D3D3"/>
                            <!-- Grigio chiaro -->
                            <Setter Property="BorderThickness" Value="1"/>
                        </Trigger>

                        <Trigger Property="IsFocused" Value="True">
                            <Setter Property="BorderBrush" Value="#D3D3D3"/>
                            <!-- Grigio chiaro -->
                            <Setter Property="BorderThickness" Value="1"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Setter.Value>
        </Setter>

        <!-- Stile per l'header -->
        <Setter Property="ColumnHeaderStyle">
            <Setter.Value>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#2C3E50"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="Padding" Value="10,8"/>
                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="BorderBrush" Value="#D3D3D3"/>
                    <!-- Grigio chiaro -->
                </Style>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>