<Window x:Class="SAOResoForm.CreaAccountControl.CreaAccountView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SAOResoForm.CreaAccountControl"
        Title="Crea Account"
        Height="700" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">



    <Grid Margin="30" Style="{StaticResource TotaleSfondo}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- TITOLO -->
        <TextBlock Grid.Row="0"
                   Text="CREA ACCOUNT"
                   Style="{StaticResource HeadText}"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- FORM -->
        <StackPanel Grid.Row="1" Orientation="Vertical">

            <!-- UTENTE -->
            <TextBlock Text="UTENTE:" Style="{StaticResource WhiteBoldText}" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Utente, UpdateSourceTrigger=PropertyChanged}"
                     Height="30" FontSize="14" Padding="5" Margin="0,0,0,10"/>

            <!-- PASSWORD (non modificabile) -->
            <TextBlock Text="PASSWORD:" Style="{StaticResource WhiteBoldText}" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Password, Mode=OneWay}"
                     Height="30" FontSize="14" Padding="5" Margin="0,0,0,10"
                     IsReadOnly="True" Foreground="Gray"/>

            <!-- COGNOME -->
            <TextBlock Text="COGNOME:" Style="{StaticResource WhiteBoldText}" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Cognome, UpdateSourceTrigger=PropertyChanged}"
                     Height="30" FontSize="14" Padding="5" Margin="0,0,0,10"/>

            <!-- NOME -->
            <TextBlock Text="NOME:" Style="{StaticResource WhiteBoldText}" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Nome, UpdateSourceTrigger=PropertyChanged}"
                     Height="30" FontSize="14" Padding="5" Margin="0,0,0,10"/>

            <!-- INCARICO -->
            <TextBlock Text="INCARICO:" Style="{StaticResource WhiteBoldText}" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Incarico, UpdateSourceTrigger=PropertyChanged}"
                     Height="30" FontSize="14" Padding="5" Margin="0,0,0,10"/>

            <!-- MATRICOLA -->
            <TextBlock Text="MATRICOLA:" Style="{StaticResource WhiteBoldText}" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Matricola, UpdateSourceTrigger=PropertyChanged}"
                     Height="30" FontSize="14" Padding="5" Margin="0,0,0,10"/>

            <!-- UUOO -->
            <TextBlock Text="UUOO:" Style="{StaticResource WhiteBoldText}" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Uuoo, UpdateSourceTrigger=PropertyChanged}"
                     Height="30" FontSize="14" Padding="5" Margin="0,0,0,10"/>

            <!-- RUOLO -->
            <TextBlock Text="RUOLO:" Style="{StaticResource WhiteBoldText}" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Ruolo, UpdateSourceTrigger=PropertyChanged}"
                     Height="30" FontSize="14" Padding="5" Margin="0,0,0,10"/>

            

        </StackPanel>

        <!-- PULSANTI -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">
            <Button Content="SALVA"
                    Command="{Binding SalvaCommand}"
                    Width="120" Height="40"
                    FontSize="14" Margin="0,0,10,0"/>
            <Button Content="ANNULLA"
                    Command="{Binding AnnullaCommand}"
                    Width="120" Height="40"
                    FontSize="14"/>
        </StackPanel>

    </Grid>
</Window>