<UserControl x:Class="SAOResoForm.HeaderControl.HeaderUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="70"
             d:DesignWidth="800">

    <Grid Height="70">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#F2F2F2" Offset="0.0"/>
                <GradientStop Color="#D9D9D9" Offset="0.5"/>
                <GradientStop Color="#C0C0C0" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left">

            <Image Source="/img/ministero-difesa-logo.png"
                   Height="40"
                   Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
