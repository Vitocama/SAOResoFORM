<Window x:Class="SAOResoForm.AttestatiControl.AttestazioniInserimentoControl.AttestatiInserimentoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SAOResoForm.AttestatiControl.AttestazioniInserimentoControl"
        xmlns:converters="clr-namespace:SAOResoForm.Converter"
        mc:Ignorable="d"
        Title="INSERIMENTO DEGLI ATTESTATI" Height="600" Width="1400">

    <Window.Resources>
        <converters:CodUfficioToRepartoConverter x:Key="RepartoConverter"/>
        <converters:CodUfficioToSezioneConverter x:Key="SezioneConverter"/>
        <converters:CodUfficioToNucleoConverter x:Key="NucleoConverter"/>
    </Window.Resources>

    <Grid>
        <!-- ========================= -->
        <!-- DEFINIZIONE RIGHE -->
        <!-- ========================= -->
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <!-- Titolo -->
            <RowDefinition Height="auto"/>
            <!-- Barra ricerca -->
            <RowDefinition Height="300"/>
            <!-- DataGrid -->
        </Grid.RowDefinitions>

        <!-- ========================= -->
        <!-- TITOLO -->
        <!-- ========================= -->
        <TextBlock Grid.Row="0"
                   Text="VISUALIZZA DATABASE"
                   Style="{StaticResource HeadText}"
                   Foreground="#2C3E50"
                   HorizontalAlignment="Center"
                   Margin="0,10"/>

        <!-- ========================= -->
        <!-- BARRA DI RICERCA -->
        <!-- ========================= -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="Cerca:"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"/>

            <TextBox Grid.Column="1"
                     Width="300"
                     MaxWidth="600"
                     HorizontalAlignment="Left"
                     Text="{Binding FiltroRicerca, UpdateSourceTrigger=PropertyChanged}"/>

            <StackPanel Grid.Column="2"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Margin="10,0,0,0">

                <TextBlock Text="Visualizzati: "
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="#2C3E50"/>

                <TextBlock Text="{Binding FilteredPersonaleList.Count}"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="#27ae60"/>

                <TextBlock Text=" / "
                           FontSize="14"
                           Margin="5,0"/>

                <TextBlock Text="{Binding PersonaleList.Count}"
                           FontSize="14"
                           Foreground="#7f8c8d"/>
            </StackPanel>
        </Grid>

        <!-- ========================= -->
        <!-- DATAGRID -->
        <!-- ========================= -->
        <DataGrid Grid.Row="2"
                
                  ItemsSource="{Binding FilteredPersonaleList}"
                  SelectedItem="{Binding PersonaleSelezionato}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  MouseDoubleClick="MouseDoubleClick"
                  VerticalScrollBarVisibility="Disabled"
                  Height="300">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="50"
                                    Binding="{Binding Id}"/>

               
                <DataGridTextColumn Header="Cognome" Width="120"
                                    Binding="{Binding Cognome}"/>

                <DataGridTextColumn Header="Nome" Width="120"
                                    Binding="{Binding Nome}"/>

                <DataGridTextColumn Header="Mil/Civ" Width="80"
                                    Binding="{Binding MilCiv}"/>

                <DataGridTextColumn Header="Matricola" Width="100"
                                    Binding="{Binding Matricola}"/>

                <DataGridTextColumn Header="Grado/Qualifica" Width="120"
                     Binding="{Binding GradoQualifica}"/>

                <DataGridTextColumn Header="Categoria/Profilo" Width="120"
                     Binding="{Binding CategoriaProfilo}"/>


                <!-- ========================= -->
                <!-- CAMPI CALCOLATI -->
                <!-- ========================= -->
                <DataGridTextColumn Header="Reparto" Width="150"
                                    Binding="{Binding CodUfficio, Converter={StaticResource RepartoConverter}}"/>

                <DataGridTextColumn Header="Sezione" Width="150"
                                    Binding="{Binding CodUfficio, Converter={StaticResource SezioneConverter}}"/>

                <DataGridTextColumn Header="Nucleo" Width="150"
                                    Binding="{Binding CodUfficio, Converter={StaticResource NucleoConverter}}"/>

                <!-- ========================= -->
                <!-- ALTRI CAMPI -->
                <!-- ========================= -->
                <DataGridTextColumn Header="Cod. Ufficio" Width="100"
                                    Binding="{Binding CodUfficio}"/>

                <DataGridTextColumn Header="Incarico" Width="150"
                                    Binding="{Binding Incarico}"/>

                <DataGridTextColumn Header="Stato Servizio" Width="120"
                                    Binding="{Binding StatoServizio}"/>

                <DataGridTextColumn Header="Annotazioni" Width="200"
                                    Binding="{Binding Annotazioni}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>